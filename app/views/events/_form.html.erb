<%= simple_form_for [current_user, @event ] do |f| %>
  <%= f.association :activity, as: :select, collection: Activity.all %>
  <%= f.input :start_time, as: :datetime, ampm: true %>
  <%= f.input :end_time, as: :datetime, ampm: true %>
  <%= f.input :num_attendees_requested %>
  <%= f.input :location_name %>
  <%= f.input :street_address %>
  <%= f.input :city %>
  <%= f.input :state %>
  <%= f.input :description %>

  <%= f.submit %>
<% end %>
